<?xml version="1.0" encoding="utf-8"?>
 <Package xmlns="urn:Microsoft.WindowsPhone/PackageSchema.v8.00"
    Owner="$(OEMNAME)"
    OwnerType="OEM"
    ReleaseType="Production"
    Platform="$(BSPARCH)"
    Component="Recovery"
    SubComponent="Wimfiles"
    Partition="MMOS"
    BinaryPartition="false" >
    <Components>
       <OSComponent>
         <Files>
            <File
                DestinationDir="$(runtime.root)"
                Name="version.txt"
                Source="version.txt"
                />
            <File
                DestinationDir="$(runtime.root)"
                Name="mainos.wim"
                Source="mainos.wim"
                />
            <File
                DestinationDir="$(runtime.root)"
                Name="data.wim"
                Source="data.wim"
                />
            <!--File
                DestinationDir="$(runtime.root)"
                Name="efiesp.wim"
                Source="efiesp.wim"
                /-->
        </Files>
       </OSComponent>
    </Components>
 </Package>